<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#83000000"
    android:backgroundTintMode="screen"
    android:focusable="auto"
    android:hapticFeedbackEnabled="true"
    android:visibility="visible"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Unesite sljedece podatke"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/registerEmailTxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColor="#FFDF2B"
            android:textColorHint="#FFDF2B"
            app:layout_constraintBottom_toTopOf="@+id/registerPasswordTxt"
            app:layout_constraintTop_toBottomOf="@+id/registerLastNameTxt" />

        <EditText
            android:id="@+id/registerFirstNameTxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Ime i prezime"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="#FFDF2B"
            android:textColorHint="#FFDF2B"
            app:layout_constraintBottom_toTopOf="@+id/registerLastNameTxt"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/registerLastNameTxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Broj mobitela"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="#FFDF2B"
            android:textColorHint="#FFDF2B"
            app:layout_constraintBottom_toTopOf="@+id/registerEmailTxt"
            app:layout_constraintTop_toBottomOf="@+id/registerFirstNameTxt" />

        <EditText
            android:id="@+id/registerPasswordTxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Lozinka"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="#FFDF2B"
            android:textColorHint="#FFDF2B"
            app:layout_constraintBottom_toTopOf="@+id/registerPasswordCnfTxt"
            app:layout_constraintTop_toBottomOf="@+id/registerEmailTxt" />

        <EditText
            android:id="@+id/registerPasswordCnfTxt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Potvrdite lozinku"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="#FFDF2B"
            android:textColorHint="#FFDF2B"
            app:layout_constraintBottom_toTopOf="@+id/registerBtn"
            app:layout_constraintTop_toBottomOf="@+id/registerPasswordTxt" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:backgroundTint="#FFDF2B"
            android:text="SljedeÄ‡e"
            android:textColor="#000"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerPasswordCnfTxt" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
